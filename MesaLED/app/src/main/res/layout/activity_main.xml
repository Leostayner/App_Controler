<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButtonRigth"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_above="@+id/imageButtonBot"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta1" />

    <ImageButton
        android:id="@+id/imageButtonBot"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta2" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_above="@+id/imageButtonBot"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta3" />

    <ImageButton
        android:id="@+id/imageButtonTop"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_above="@+id/imageButtonRigth"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta4" />

</RelativeLayout>