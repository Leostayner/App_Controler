<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/imageButtonRigth"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta1" />

    <ImageButton
        android:id="@+id/imageButtonBot"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/imageButtonLeft"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta2" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta3" />

    <ImageButton
        android:id="@+id/imageButtonTop"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/imageButtonRigth"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/seta4" />

</RelativeLayout>